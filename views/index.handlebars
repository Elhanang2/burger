<div class="container">
  <img src="public/assets/img/burger.png" alt="burger" width="100" height="100"></img>
  <h3>Eat-Da-Burger!</h3>
  <div class="form-input">
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
        <p>
            {{this.id}}. {{this.burger_name}}
            
          <button data-id="{{this.id}}" data-devouredstate="{{devoured}}" value="0" class="devoured">Devoured it!</button>
      
        </p>
        {{/unless}}
      {{/each}}
    </ul>
    

  </div>
  <div class="devoredit">
    <ul>
      {{#each burgers}}
        {{#if devoured}}
        <p>
            {{this.id}}. {{this.burger_name}}
        </p>
          
        {{/if}}
      {{/each}}
    </ul>
  </div>
  <form class="create-form">

      <div class="form-burger">
      
        <input type="text" id="burgerinput" name="burger-name">
      </div>

    <div class="submitbutton">
      <button class="submit"type="submit">Submit</button>
    </div>  
    
     <p>Enter a burger you want to eat Click submit button</p> 
    </form>

    

</div>

